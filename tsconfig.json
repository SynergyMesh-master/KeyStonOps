{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@db/*": ["./db/*"],
      "@assets/*": ["./attached_assets/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["client/src/**/*", "server/**/*", "shared/**/*", "db/**/*", "vite.config.ts", "drizzle.config.ts"],
  "exclude": ["node_modules", "dist"]
}
